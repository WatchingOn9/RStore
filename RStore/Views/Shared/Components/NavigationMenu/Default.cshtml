@model IEnumerable<Category>

@{ 
    string controller = ViewContext.RouteData.Values["Controller"].ToString();
    string active = string.Empty;

    if (controller == "Page") {
        active = ((ViewContext.RouteData.Values["Id"].ToString() == "3") && (string.IsNullOrEmpty(ViewBag.SelectedCategory))) ? "active" : "";
    }
}
<li class="nav-item" style="padding: 10px 13px;">
    <h6 class="text-uppercase d-inline">CATEGORIES</h6>
    <i class="fas fa-bars d-inline" style="float: right; line-height: 1.5rem"></i>
</li>
<li class="nav-item">
    <a class="nav-link @active"
       asp-action="Index"
       asp-controller="Page"
       asp-route-category=""
       asp-route-Id="3">
        All Products
    </a>
</li>

@foreach (var category in Model) {

    @await Html.PartialAsync("CategoryItem", category)

}
