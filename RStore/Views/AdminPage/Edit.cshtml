@model PageEditViewModel
@{
    Layout = "_AdminLayout";
}

<h4>Edit Page </h4>
@if (TempData["error"] != null) {
    <div class="alert alert-danger">@TempData["error"]</div>
}
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Page.PageID" />
        <div class="form-group">
            <label asp-for="Page.PageName"></label>
            <div><span asp-validation-for="Page.PageName" class="text-danger"></span></div>
            <input asp-for="Page.PageName" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Page.Title"></label>
            <div><span asp-validation-for="Page.Title" class="text-danger"></span></div>
            <input asp-for="Page.Title" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Page.Content"></label>
            <textarea asp-for="Page.Content" class="form-control" name="Page.Content"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Page.Order"></label>
            <input asp-for="Page.Order" class="form-control" type="number" />
        </div>
        @*<div class="form-group">
            <label>Parent Page</label>
            <select asp-for="Page.ParentID" class="form-control"
                    asp-items="@(new SelectList(Model.Pages,"PageID","PageName", Model.Page.ParentPage == null ? 0 : Model.Page.ParentID))">
                <option value="">Please select one</option>
            </select>
        </div>*@
        <div class="form-group">
            <label asp-for="Page.Disable"></label>
            <input asp-for="Page.Disable" type="checkbox" />
        </div>
        <div class="form-group">
            <label asp-for="Page.ShowProduct"></label>
            <input asp-for="Page.ShowProduct" type="checkbox" />
        </div>
        <div class="form-group">
            <label asp-for="Page.ShowEnquiryForm"></label>
            <input asp-for="Page.ShowEnquiryForm" type="checkbox" />
        </div>

        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

@section Scripts {
<script src="//cdn.ckeditor.com/4.10.1/full/ckeditor.js"></script>
<script>
    CKEDITOR.config.startupMode = 'source';
    CKEDITOR.replace('Page.Content');
</script>
}
